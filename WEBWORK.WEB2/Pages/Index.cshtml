@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Student List</h2>

                <table class="table table-striped" >
                    <tr>
                        <td>Name </td>
                        <td>Phone</td>
                    </tr>
                    @foreach (var st in Model.Students)
                    {
                        <tr>
                            <td>@st.Name</td>
                            <td>@st.Phone</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>